{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Nexus.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Nexus.sln",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "dependsOn": ["docker-up"]
    },
    {
      "label": "publish-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/Core/Nexus.Core.Api/Nexus.Core.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Core/Nexus.Core.Api/Nexus.Core.Api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-worker",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/Core/Nexus.Core.Worker/Nexus.Core.Worker.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-worker",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/Core/Nexus.Core.Worker/Nexus.Core.Worker.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker-down",
      "command": "docker-compose",
      "type": "process",
      "args": ["-f", "docker-compose.yml", "down"],
      "problemMatcher": []
    },
    {
      "label": "docker-up",
      "command": "docker-compose",
      "type": "process",
      "args": [
        "-f",
        "docker-compose.yml",
        "up",
        "-d",
        "--build",
        "--force-recreate",
        "--remove-orphans"
      ],
      "problemMatcher": []
    }
  ]
}
